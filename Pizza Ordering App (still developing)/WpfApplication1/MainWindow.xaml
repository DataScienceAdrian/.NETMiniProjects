                <ComboBoxItem Content="Boryna na Hawajach" HorizontalAlignment="Left" Width="118" />
                <ComboBoxItem Content="Teksański Kurczak" HorizontalAlignment="Left" Width="118"/>
                <ComboBoxItem Content="Uczta Wieśniaka" HorizontalAlignment="Left" Width="118"/>
                <ComboBoxItem Content="Kebab" HorizontalAlignment="Left" Width="118"/>
