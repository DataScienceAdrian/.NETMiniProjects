                <ColumnDefinition Width="0*"/>
                <ColumnDefinition Width="143*"/>

            </Grid.ColumnDefinitions>
            <Button Name="Zamowienie" Background="GreenYellow" HorizontalAlignment="Left" Margin="0,291,0,0" VerticalAlignment="Top" Width="209" Click="Button_Click" Grid.Column="2" Height="88" IsEnabled="False">
                <StackPanel>
                    <Label Margin="0" Height="31" Width="124" Content="Złóż Zamówienie"/>
                    <Image Source="G:\C#\WpfApplication1\WpfApplication1\Images\pizza.jpg" Height="52" Width="192" RenderTransformOrigin="0.5,0.5" />
                </StackPanel>
            </Button>
            <ComboBox  Name="first"  HorizontalAlignment="Left" Margin="26,25,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="ComboBox_SelectionChanged" IsReadOnly="True" SelectedIndex="0" Height="22">
